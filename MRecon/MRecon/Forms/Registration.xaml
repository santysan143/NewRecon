<Page x:Class="MRecon.Forms.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Width="900" 	Title="Registration">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Full Name</Label>
        <Label Grid.Row="0" Grid.Column="2" VerticalAlignment="Center">Mobile Number</Label>
        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Email-ID</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" x:Name="txtFullName"></TextBox>
        <TextBox Grid.Row="0" Grid.Column="3" Margin="5" x:Name="txtMobileNumber"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" x:Name="txtEmailID"></TextBox>
        <Button x:Name="btnSubmit" Grid.Row="2" Grid.ColumnSpan="4" Width="150" Content="Register" Margin="0,5" Click="btnSubmit_Click"></Button>
        <TextBlock><Hyperlink x:Name="url">Click To Register</Hyperlink></TextBlock>
    </Grid>
</Page>
